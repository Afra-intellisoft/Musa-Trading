<odoo>
    <record id="is_letter_external_wizard" model="ir.ui.view">
        <field name="name">Letter External Status</field>
        <field name="model">is.letter.external.wizard</field>
        <field name="arch" type="xml">

            <form string="Letter External">
                   <p><strong>Select period </strong></p><br/>
                    <group col="4">
                        <field name="start_date"/>
                        <field name="end_date" required="1"/>
                        <field name="subject_id" required="1"/>


                    </group>
                    <footer>
                        <button name="print_report" string="Print" type="object" class="oe_highlight" /> or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
        </field>
    </record>
 <record id="is_letter_external_report_action" model="ir.actions.act_window">
        <field name="name">Letter External Status</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">is.letter.external.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <!--<field name="view_id" ref="is_letter_external_wizard"/>-->
        <field name="target">new</field>
    </record>
        <menuitem action="is_letter_external_report_action" id="is_letter_external_report_menu" parent="hr_letter_views" name="Letter External Report" groups="hr.group_hr_manager"/>
    </odoo>